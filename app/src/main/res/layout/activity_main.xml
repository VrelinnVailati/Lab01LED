<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/xtvTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Presione el botón para encender el led" />

    <Button
        android:id="@+id/xbnVerificarConexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verificar Conexión" />

    <ToggleButton
        android:id="@+id/xtbEstado"
        android:textOn="ON"
        android:textOff="OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/xivImagenLed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/led_apagado" />
</LinearLayout>
